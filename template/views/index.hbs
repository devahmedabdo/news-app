<html lang="en" dir="rtl">

{{>head}}

<body>
  {{>header}}

  <section>
    <div class="container">
      <div class="new-content d-flex flex-wrap justify-content-center m-2">
        {{#each articles}}
        <div class="bg-light col-lg-3 col-md-5 d-flex flex-column gap-3 overflow-hidden rounded-4 shadow m-3 justify-content-between">
          <img class="w-100" src="{{this.urlToImage}}" alt="">
          <h2 class="pt-4 px-1 fs-3">{{this.title}}</h2>
          <p class="m-0">{{this.description}}</p>
          <a class="btn btn-primary mx-auto my-3 px-5 rounded-5" href="{{this.url}}">للمزيد</a>
        </div>
        {{/each}}
      </div>
    </div>
  </section>

  {{>footer}}
  {{>mainScripts}}
</body>

</html>